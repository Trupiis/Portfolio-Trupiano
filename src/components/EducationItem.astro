---
interface Props {
    date: string;
    title: string;
    description: string;
}


const { date, title, description }: Props = Astro.props;
---


<li class="relative mb-6 sm:mb-0">
            <div class="flex items-center">
                <div class="absolute flex items-center justify-center w-5 h-3 bg-blue-100 rounded-full -start-3"></div>
                <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
            </div>
            
            <div class="mt-3 sm:pe-8">
                <span class="text-lg font-semibold text-[#51D8F3]">{date}</span>
                <p class="block mb-6 text-sm font-normal leading-none text-gray-300 ">{title}</p>
                <p class="text-base font-normal text-white">{description}</p>
            </div>
        </li>