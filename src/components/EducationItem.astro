---
interface Props {
    date: string;
    title: string;
    description: string;
}


const { date, title, description }: Props = Astro.props;
---

<li class="relative mb-6 sm:mb-0">
        <div class="flex items-center">
            <div class="flex items-center justify-center size-2 rounded-full flex-col sm:ring-4"></div>
            <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
        </div>
        <div class="mt-3 sm:pe-8">
            <h3 class="text-md font-semibold text-gray-200">{date}</h3>
            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{title}</time>
            <p class="text-sm font-normal text-gray-500">{description}</p>
        </div>
    </li>