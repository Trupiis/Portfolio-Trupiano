---
import Bars from "../icons/bars.astro"
---

<a href="#" id="menu-button" class="md:hidden flex justify-end pr-6 z-[70]">
    <Bars class="size-7">
</a>

<div id="sidebar">
    <slot>
</div>

<script>
    const button = document.querySelector("#menu-button") as Element;
    const menuOpen = document.querySelector('#menu-open') as Element;
    const closeBtn = document.querySelector("#close-button") as Element;


    button.addEventListener("click", ()=>{
        menuOpen.classList.toggle("hidden")
    })

    closeBtn?.addEventListener("click", ()=>{
        menuOpen.classList.toggle("hidden")
    })

    document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      menuOpen.classList.add("hidden");
    }
  });
</script>