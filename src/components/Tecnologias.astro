---

import HTML from "../icons/HTML.astro"
import CSS from "../icons/CSS.astro"
import JS from "../icons/JS.astro"
import NEXT from "../icons/NEXT.astro"
import REACT from "../icons/REACT.astro"
import TAILWIND from "../icons/TAILWIND.astro"
import NODE from "../icons/NODE.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import Mongo from "../icons/Mongo.astro"
import PS from "../icons/PS.astro"
import AI from "../icons/AI.astro"
import Figma from "../icons/Figma.astro"


const TECNOLOGIAS = [
    {
        title: "HTML",
        icon: HTML
    },
    {
        title: "CSS",
        icon: CSS
    },
    {
        title: "JavaScript",
        icon: JS
    },
    {
        title: "React",
        icon: REACT
    },
    {
        title: "NextJS",
        icon: NEXT
    },
    {
        title: "Astro",
        icon: AstroIcon
    },
    {
        title: "TailwindCSS",
        icon: TAILWIND
    },
    {
        title: "NodeJS",
        icon: NODE
    },
    {
        title: "MongoDB",
        icon: Mongo
    },
    {
        title: "Photoshop",
        icon: PS
    },
    {
        title: "Illustrator",
        icon: AI
    },
    {
        title: "Figma",
        icon: Figma
    },
    
]

---

<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 place-items-center max-w-[600px] mx-auto">
    {TECNOLOGIAS.map(({ title, icon: Icon}) => (
        <div class="inline-flex flex-col items-center w-30 p-2.5 bg-gray-900 rounded duration-100 hover:scale-110">
            <Icon class="size-12 p-2"/>
            <span>{title}</span>
        </div>
    ))}
</div>