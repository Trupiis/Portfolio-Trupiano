---

import NEXT from "../icons/NEXT.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import TAILWIND from "../icons/TAILWIND.astro"
import PS from "../icons/PS.astro"
import AI from "../icons/AI.astro"
import GitHub from "../icons/GitHub.astro"
import Behance from "../icons/Behance.astro"
import ARROW from "../icons/Arrow.astro"


const TAGS = {
    ARROW: {
        name: "Arrow",
        class: "bg-[#000] text-white flex gap-x-1 p-1.5 pl-2.5 pr-2.5 rounded-full text-xs items-center w-auto",
        icon: ARROW,
    },
    NEXT: {
        name: "NextJS",
        class: "bg-[#000] text-white flex gap-x-1 p-1.5 pl-2.5 pr-2.5 rounded-full text-xs items-center w-auto",
        icon: NEXT,
    },
    ASTRO: {
        name: "Astro",
        class: "bg-[#B34910] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: AstroIcon
    },
    TAILWIND: {
        name: "TailwindCSS",
        class: "bg-[#0C639D] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: TAILWIND
    },
    PHOTOSHOP: {
        name: "Photoshop",
        class: "bg-[#053656] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: PS
    },
    ILLUSTRATOR: {
        name: "Illustrator",
        class: "bg-[#5D1B0D] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: AI
    },
    GITHUB: {
        name: "GitHub",
        icon: GitHub
    },
    
    BEHANCE: {
        name: "Behance",
        icon: Behance
    },
    
}

const PROYECTOS = [
    {
        title: "Portafolio | Elian Trupiano",
        categoria: "desarrollo",
        description: "Proyecto desarrollado con Astro y Tailwind CSS, enfocado en lograr un sitio web moderno, rápido y optimizado.",
        tags: [TAGS.ASTRO, TAGS.TAILWIND],
        image: "/proyectos/p01.webp",
        type: "<Código/>",
        URL : "https://github.com/Trupiis/Portfolio-Trupiano",
        WEBSITE: "https://eliantrupiano.vercel.app/",
        Icon: TAGS.GITHUB,
        Preview: TAGS.ARROW,
        visualizar : "Preview"
    },
    {
        title: "Ecommerce GoPro Shop",
        categoria: "desarrollo",
        description: "Ecommerce desarrollado con NextJS incluyendo Firestore como base de datos para darle la funcionalidad a la tienda.",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
        image: "/proyectos/p02.webp",
        type: "<Código/>",
        URL : "https://github.com/Trupiis/GoPro-Shop",
        WEBSITE: "https://goproshop.vercel.app/",
        Icon: TAGS.GITHUB,
        Preview: TAGS.ARROW,
        visualizar : "Preview"
    },
    {
        title: "Manual de marca",
        categoria: "diseño",
        description: "Proyecto desarrollado con Adobe Illustrator, enfocado en la creación de una identidad visual coherente y profesional. Incluye la construcción de la identidad visual de la marca y la guia del correcto uso de la misma.",
        tags: [TAGS.PHOTOSHOP, TAGS.ILLUSTRATOR],
        image: "/proyectos/p03.webp",
        type: "Behance",
        URL : "https://www.behance.net/gallery/228557407/Manual-de-identidad-Crianza-Consciente",
        Icon: TAGS.BEHANCE
    },
    {
        title: "Logo tipográfico | Monograma ",
        categoria: "diseño",
        description: "Proyecto desarrollado con Adobe Illustrator, creación de una composición tipográfica que sintetiza las iniciales de la marca, transmitiendo profesionalismo, estilo y personalidad a través de formas limpias y bien equilibradas.",
        tags: [TAGS.PHOTOSHOP, TAGS.ILLUSTRATOR],
        image: "/proyectos/p04.webp",
        type: "Behance",
        URL : "https://www.behance.net/gallery/229887605/Monograma-Marca-Mariana-Duque",
        Icon: TAGS.BEHANCE
    },
]

const proyectos = JSON.stringify(PROYECTOS);
---

<div x-data="{ filtro: 'todos' }">
  <div class="flex gap-3 mb-10 justify-center">
    <button
      @click="filtro = 'todos'"
      :class="filtro === 'todos' ? 'bg-[#51D8F3] text-black font-semibold' : 'bg-gray-800 text-white'"
      class="px-4 py-2 rounded-lg transition-colors"
    >
      Todos
    </button>
    <button
      @click="filtro = 'desarrollo'"
      :class="filtro === 'desarrollo' ? 'bg-[#51D8F3] text-black font-semibold' : 'bg-gray-800 text-white'"
      class="px-4 py-2 rounded-lg transition-colors"
    >
      Desarrollo Web
    </button>
    <button
      @click="filtro = 'diseño'"
      :class="filtro === 'diseño' ? 'bg-[#51D8F3] text-black font-semibold' : 'bg-gray-800 text-white'"
      class="px-4 py-2 rounded-lg transition-colors"
    >
      Diseño Gráfico
    </button>
  </div>

  <div class="grid grid-cols-2 gap-10">
    {PROYECTOS.map(({ title, description, Preview, tags, image, visualizar ,URL, WEBSITE, Icon, type, categoria }) => (
      <div class="flex" x-show={`filtro === 'todos' || filtro === '${categoria}'`}>
        <div class="p-6 bg-[#87878736] shadow-2xl shadow-black rounded-2xl">
          
          <li class="flex gap-3 pb-10">
            <span class="bg-[#232323] border-1 border-amber-50 text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-sm items-center w-auto">
              <a href={URL} target="_blank" class="flex items-center gap-x-2 pr-1.5 pl-1.5">
                {Icon === TAGS.BEHANCE && <Behance class="size-5" />}
                {Icon === TAGS.GITHUB && <GitHub class="size-5" />}
                {type}
              </a>
            </span>

            {categoria === 'desarrollo' && (
            <span class="bg-[#232323] border-1 border-amber-50 text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-sm items-center w-auto">
              <a href={WEBSITE} target="_blank" class="flex items-center gap-x-2 pr-1.5 pl-1.5">
                {Preview === TAGS.ARROW && <ARROW class="size-5" />}
                {visualizar}
              </a>
            </span>
                    )}
          </li>

          <img class="hover:scale-102 duration-200 rounded-lg w-lg mb-2" src={image} alt={`Foto del proyecto ${title}`} />
        </div>
      </div>
    ))}
  </div>  



</div>

</div>

