---
import NEXT from "../icons/NEXT.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import TAILWIND from "../icons/TAILWIND.astro"
import PS from "../icons/PS.astro"
import AI from "../icons/AI.astro"
import GitHub from "../icons/GitHub.astro"

const TAGS = {
    NEXT: {
        name: "NextJS",
        class: "bg-[#000] text-white flex gap-x-1 p-1.5 pl-2.5 pr-2.5 rounded-full text-xs items-center w-auto",
        icon: NEXT,
    },
    ASTRO: {
        name: "Astro",
        class: "bg-[#B34910] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: AstroIcon
    },
    TAILWIND: {
        name: "TailwindCSS",
        class: "bg-[#0C639D] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: TAILWIND
    },
    PHOTOSHOP: {
        name: "Photoshop",
        class: "bg-[#053656] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: PS
    },
    ILLUSTRATOR: {
        name: "Illustrator",
        class: "bg-[#5D1B0D] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: AI
    },
    GITHUB: {
        name: "GitHub",
        icon: GitHub
    },
    
}

const PROYECTOS = [
    {
        title: "Portafolio | Elian Trupiano",
        description: "Proyecto desarrollado con Astro y Tailwind CSS, enfocado en lograr un sitio web moderno, rápido y optimizado.",
        //tags: ["Astro", "TailwindCSS", "Javascript"],
        tags: [TAGS.ASTRO, TAGS.TAILWIND],
        image: "../public/proyectos/p01.webp",
        GitHubURL : "https://github.com/Trupiis/Portfolio-Trupiano",
        GithubIcon: [TAGS.GITHUB]
    },
    {
        title: "Ecommerce GoPro Shop",
        description: "Ecommerce desarrollado con NextJS incluyendo Firestore como base de datos para darle la funcionalidad a la tienda.",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
        image: "../public/proyectos/p02.webp",
        GitHubURL : "https://github.com/Trupiis/GoPro-Shop",
        GithubIcon: [TAGS.GITHUB]
    },
    {
        title: "Manual de marca",
        description: "Proyecto desarrollado con Astro y Tailwind CSS, enfocado en lograr un sitio web moderno, rápido y optimizado.",
        //tags: ["PhotoShop", "IA Optimization"],
        tags: [TAGS.PHOTOSHOP, TAGS.ILLUSTRATOR],
        image: "../public/proyectos/p01.webp",
        GitHubURL : "/",
        GithubIcon: [TAGS.GITHUB]
    },
]
---

{
    PROYECTOS.map(({title, description, tags, image, GitHubURL, GithubIcon}) =>(
    <ol class="relative border-s border-gray-200">                  
        <li class="mb-5 ms-6">            
        <span class="absolute flex items-center justify-center w-3 h-5 bg-blue-100 rounded-full -start-1.5 ring-white">
        </span>
        <h3 class="flex items-center mb-2 text-lg font-semibold text-white opacity-90">{title}</h3>

        <p class="mb-2 text-base font-normal text-gray-500 text-pretty w-auto">{description}</p>

        <ul class="mb-4 flex gap-x-3">
            {tags.map((tag)=>(
                <li>
                    <span class={tag.class}>
                        <tag.icon class="size-4"/>
                        {tag.name}
                    </span>
                </li>
            ))}
        </ul>

        <img class="rounded-lg w-xl mb-2" src={image} alt={`Foto del proyecto ${title}`}/>

        <li class="ms-6 flex pb-10">
            <span class="bg-[#232323] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-sm items-center w-auto">
                <a href={GitHubURL} target="_blank" class="flex items-center gap-x-2 pr-1.5 pl-1.5" ><GitHub class="size-5"/>&lt;Código /&gt;</C></a>
                    </span>
        </li>
        </li>
    </ol>

    ))
}


