---
import PS from "../icons/PS.astro"
import AI from "../icons/AI.astro"
import GitHub from "../icons/GitHub.astro"
import Behance from "../icons/Behance.astro"
import ARROW from "../icons/Arrow.astro"
import XD from '../icons/XD.astro'


const TAGS = {
    ARROW: {
        name: "Arrow",
        class: "bg-[#000] text-white flex gap-x-1 p-1.5 pl-2.5 pr-2.5 rounded-full text-xs items-center w-auto",
        icon: ARROW,
    },
    PHOTOSHOP: {
        name: "Photoshop",
        class: "bg-[#053656] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: PS
    },
    ILLUSTRATOR: {
        name: "Illustrator",
        class: "bg-[#5D1B0D] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: AI
    },
    XD: {
        name: "Adobe XD",
        class: "bg-[#C11C8A] text-white flex gap-x-1 p-1.5 pl-2 pr-2 rounded-full text-xs items-center w-auto",
        icon: XD
    },
    GITHUB: {
        name: "GitHub",
        icon: GitHub
    },
    
    BEHANCE: {
        name: "Behance",
        icon: Behance
    },
    
}

const PROYECTOS = [
    {
        title: "Diseño Web | FLOWING",
        pagina: 1,
        categoria: "diseño",
        description: "Proyecto de diseño web realizado con Adobe XD y Photoshop para una empresa de catering de lujo en aviación privada. Se desarrolló un prototipo moderno y sofisticado, pensado para transmitir exclusividad y confianza, con una estructura visual perfectamente planificada para llevarse a producción.",
        tags: [TAGS.PHOTOSHOP, TAGS.XD],
        image: "/proyectos/p05.webp",
        type: "Behance",
        URL : "https://www.behance.net/gallery/233030753/Diseno-Web-Flowing-Comida-de-Lujo",
        Icon: TAGS.BEHANCE,
        Preview: TAGS.ARROW,
        visualizar : "Preview"
    },
    {
        title: "Manual de marca",
        pagina: 2,
        categoria: "diseño",
        description: "Proyecto desarrollado con Adobe Illustrator, enfocado en la creación de una identidad visual coherente y profesional. Incluye la construcción de la identidad visual de la marca y la guia del correcto uso de la misma.",
        tags: [TAGS.PHOTOSHOP, TAGS.ILLUSTRATOR],
        image: "/proyectos/p03.webp",
        type: "Behance",
        URL : "https://www.behance.net/gallery/228557407/Manual-de-identidad-Crianza-Consciente",
        Icon: TAGS.BEHANCE,
        Preview: TAGS.ARROW,
        visualizar : "Preview"
    },
    {
        title: "Logo tipográfico | Monograma ",
        pagina: 1,
        categoria: "diseño",
        description: "Proyecto desarrollado con Adobe Illustrator, creación de una composición tipográfica que sintetiza las iniciales de la marca, transmitiendo profesionalismo, estilo y personalidad a través de formas limpias y bien equilibradas.",
        tags: [TAGS.PHOTOSHOP, TAGS.ILLUSTRATOR],
        image: "/proyectos/p04.webp",
        type: "Behance",
        URL : "https://www.behance.net/gallery/229887605/Monograma-Marca-Mariana-Duque",
        Icon: TAGS.BEHANCE,
        Preview: TAGS.ARROW,
        visualizar : "Preview"
    },
]

const proyectos = JSON.stringify(PROYECTOS);
---

<div x-data="{ pagina: 1 }" class="space-y-10">
  <!-- Botones de navegación -->
  <div class="flex justify-center gap-4 mb-6">
    <button
      @click="pagina = 1"
      :class="pagina === 1 ? 'bg-[#f3f3f3] text-black font-semibold' : 'bg-[#303030] text-white'"
      class="px-4 py-2 rounded-lg transition-colors"
    >
      Página 1
    </button>
    <button
      @click="pagina = 2"
      :class="pagina === 2 ? 'bg-[#f3f3f3] text-black font-semibold' : 'bg-[#303030] text-white'"
      class="px-4 py-2 rounded-lg transition-colors"
    >
      Página 2
    </button>
  </div>

  <!-- Proyectos -->
  <div class="grid grid-cols-1 space-y-10">
    {PROYECTOS.map(
      ({
        title,
        description,
        tags,
        image,
        URL,
        Icon,
        type,
        categoria,
        Preview,
        visualizar,
        pagina,
      }) => (
        <div x-show={`pagina === ${pagina}`}>
          <div class="p-8 bg-linear-to-br from-[#535353] to-[#02090e] shadow-2xl shadow-black rounded-2xl flex-col"> 
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
              <img class="hover:scale-102 duration-200 rounded-lg shadow-xl shadow-black" src={image} alt={`Foto del proyecto ${title}`} />

              <div>
                <div class="space-y-5">
                  <h3 class="max-md:text-xl text-2xl font-medium pb-2">{title}</h3>
                  <ul class="flex flex-wrap gap-4">
                    {tags.map(({ name, class: tagClass, icon: TagIcon }) => (
                      <li class={tagClass}>
                        {TagIcon && <TagIcon class="size-4" />}
                        <span>{name}</span>
                      </li>
                    ))}
                  </ul>
                  <p class="text-base font-light">{description}</p>
                </div>

                <div class="pt-10 flex gap-3">
                  <span class="bg-[#232323] border border-amber-50 text-white flex gap-x-1 p-1.5 px-2 rounded-full text-sm items-center">
                    <a href={URL} target="_blank" class="flex items-center gap-x-2">
                      {Icon === TAGS.BEHANCE && <Behance class="size-5" />}
                      {Icon === TAGS.GITHUB && <GitHub class="size-5" />}
                      {type}
                    </a>
                  </span>

                  {categoria === "desarrollo" && (
                    <span class="bg-[#232323] border border-amber-50 text-white flex gap-x-1 p-1.5 px-2 rounded-full text-sm items-center">
                      {Preview === TAGS.ARROW && <ARROW class="size-5" />}
                      {visualizar}
                    </span>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    )}
  </div>
</div>