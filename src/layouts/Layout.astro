---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro";
import '@fontsource-variable/sora';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio Trupi</title>

		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

	</head>
	<body>
		<div class="fixed top-0 left-0 z-[-2] w-full h-full bg-black">
			<div class="absolute top-0 left-0 right-0 bottom-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
			<div class="absolute top-[-15%] left-1/2 translate-x-[-90%] h-[1000px] w-[1200px] rounded-full bg-[radial-gradient(circle_400px_at_50%_300px,#fbfbfb36,#000)]"></div>
		</div>		
		<slot />
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
	</body>
</html>

<style>
	html,
	body {
		display: flex;
		position: relative;
		align-items: center;
		flex-direction: column;
		font-family: 'Sora Variable', sans-serif;
		color: #ffffff;
		margin: 0 auto;
		min-height: 100vh;
		scroll-behavior: smooth;
	}
</style>
