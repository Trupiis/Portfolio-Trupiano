            <h2 class="flex items-center gap-x-2 text-3xl font-semibold mb-10">
                <Book class="size-9"></Book>
                Educación
            </h2>

            <Education></Education>
        </Section> -->

        <Section id="proyectos" class="py-20 max-w-[1000px]">
            <h2 class="flex items-center gap-x-2 text-3xl font-semibold mb-20 justify-center text-center">
                <Case class="size-9"></Case>
                Proyectos
            </h2>
            <Proyecto></Proyecto>
        </Section>

        <ButtonFloar class="size-9"></ButtonFloar>
        
    </main>
